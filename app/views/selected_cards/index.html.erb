<div class="container">
  <%= render partial: "selected_cards/header" %>

  <% @selected_cards_count_by_users.each do |selected_cards_count_by_user| %>
    <div class="selected_cards-element">
      <div class="mini_user-header">
        <%= User.find_by(id: selected_cards_count_by_user[0]).first_name %>
        <%= User.find_by(id: selected_cards_count_by_user[0]).last_name %>
        <%= "(#{selected_cards_count_by_user[1]} cartes)" %>
        <%= SelectedCard.joins(:shop_card).where('shop_cards.user_id' == selected_cards_count_by_user[0]).count %>
        <div class="big_button">
          <%= link_to "Conversation",
          conversations_path(sender_id: current_user.id, recipient_id: selected_cards_count_by_user[0]), method: "post",
          class: "btn" %>
        </div>
      </div>


      <div class="visuals-container">
        <% current_user.selected_cards.all.order("created_at DESC").each do |selected_card| %>
          <% if selected_card.shop_card.user_id == selected_cards_count_by_user[0] %>


              <div class="card-element shop-element">
                <%= link_to shop_card_path(selected_card.shop_card_id) do %>
                  <% if selected_card.shop_card.ph_one.present? %>
                    <div class="visual">
                      <%= cl_image_tag selected_card.shop_card.ph_one,
                      :gravity=>"auto", :crop=>"fill",  :transformation=>[
                      {:width=>500, :crop=>"scale"},
                      {:overlay=>{:font_family=>"Arial", :font_size=>50, :text=>"#{selected_card.shop_card.user.first_name} #{selected_card.shop_card.user.last_name}"},
                      :gravity=>"south", :y=>100}
                      ], class: "mini" %>
                    </div>
                  <% end %>
                <% end %>
                <div class="price">
                  <%= selected_card.shop_card.price %> â‚¬
                </div>
                <div class="destroy_button">
                  <%= link_to selected_card_path(selected_card), method: :delete do %>
                    <%= image_tag("icone_poubelle.png", class: "icone-delete") %>
                  <% end %>
                </div>
              </div>

          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

</div>
