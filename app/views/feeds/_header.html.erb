  <div class="card-header-list">
    <h1>Annonces</h1>
    <% if current_user.search_cards.count == 0 %>
      <h3>Vous n'avez aucune carte enregistrée dans vos recherches</h3>
    <% elsif @good_shop_cards.count == 0 %>
      <h3>Aucune carte en vente ne correspond à vos recherches</h3>
    <% elsif @good_shop_cards.count == 1 %>
      <h3><%= @good_shop_cards.count %> carte est disponible</h3>
    <% else  %>
      <h3><%= @good_shop_cards.count %> cartes sont disponibles</h3>
    <% end  %>
  </div>
