<div class="container">

  <%= render partial: "shop_cards/header" %>

  <div class="shop_cards-container">
    <div class="row">

      <% @shop_cards.order("ref_card_id desc").each do |shop_card| %>
        <div class="col-md-2">
          <%= link_to shop_card_path(shop_card) do %>

            <% if shop_card.ph_one.present? %>
              <div class="shop_card-card">
                <%= cl_image_tag shop_card.ph_one,width: 130, height: 180, :gravity=>"auto", :crop=>"fill", :transformation=>[
                {:width=>500, :crop=>"scale"},
                {:overlay=>{:font_family=>"Arial", :font_size=>80, :text=>"#{shop_card.price} â‚¬"}}
                ], class: "pokemon-card-photo-mini" %>
              </div>
            <% end %>

          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>
