<%= link_to shop_card_path(shop_card) do %>

    <% if shop_card.ph_one.present? %>
      <%= cl_image_tag shop_card.ph_one,width: 130, height: 180, :gravity=>"auto", :crop=>"fill",
      class: "pokemon-card-photo-mini" %>
    <% elsif shop_card.ref_card.fr_url.present? %>
      <%= image_tag(shop_card.ref_card.fr_url, width: '130', class: "pokemon-card-mini") %>
    <% elsif shop_card.ref_card.fr_r_url.present? %>
      <%= image_tag(shop_card.ref_card.fr_r_url, width: '130', class: "pokemon-card-mini") %>
    <% else %>
      <%= image_tag(shop_card.ref_card.us_url, width: '130', class: "pokemon-card-mini") %>
    <% end %>

<% end %>
