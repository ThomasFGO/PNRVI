<div class="container">
  <div class="col-md-12">
    <div class="shop_card-container">

      <div class="shop_card-header"><h4>Annonce</h4></div>
      <div class="shop_card-body">

        <div class="card-visuals" id="shop_card-recto_verso">
          <div class="recto">
            <%= cl_image_tag @shop_card.ph_one, :gravity=>"auto", :crop=>"fill",
            :transformation=>[
            {:width=>500, :crop=>"scale"},
            {:overlay=>{:font_family=>"Arial", :font_size=>50, :text=>"#{@shop_card.user.first_name} #{@shop_card.user.last_name}"},
            :gravity=>"south", :y=>100}
            ]%>
          </div>
          <div class="verso">
            <% if @shop_card.ph_two.present? %>
              <%= cl_image_tag @shop_card.ph_two, :gravity=>"auto", :crop=>"fill",
              :transformation=>[
              {:width=>500, :crop=>"scale"},
              {:overlay=>{:font_family=>"Arial", :font_size=>50, :text=>"#{@shop_card.user.first_name} #{@shop_card.user.last_name}"},
              :gravity=>"south", :y=>100}
              ], class: "standard-photo"%>
            <% end %>
          </div>
        </div>

        <div class="card-infos">
          <% if @shop_card.ref_card.fr_name.present? %>
            <h4><%= @shop_card.ref_card.fr_name %>
               de la série <%= @shop_card.ref_card.list.fr_name %></h4>
          <% else %>
            <h4><%= @shop_card.ref_card.us_name %>
               de la série<%= @shop_card.ref_card.list.us_name %></h4>
          <% end %>
          <p> Version :
            <% if @shop_card.reved? %>
            <%= "reverse / édition 1" %>
            <% else %>
            <%= "normale" %>
            <% end %>
          </p>
          <p> État :
            <% if @shop_card.condition.present? %>
              <%= @shop_card.condition %>/5 </p>
            <% else %>
              non renseigné
            <% end %>
          <p> Langue : <%= @shop_card.language %></p>
          <p> Prix : <%= "#{@shop_card.price} €" %></p>
        </div>

      </div>

      <div class="card-buttons">
        <% if @shop_card.user == current_user %>
          <%= link_to 'Retirer', shop_card_path(@shop_card),
          :class => "btn btn-classic btn-lg border-yellow", method: :delete,
           data: { confirm: 'Are you sure?' } %>

          <%= link_to "Modifier", edit_shop_card_path(@shop_card), class: "btn btn-classic btn-lg border-yellow"%>
        <% else %>
          <% if current_user.selected_cards.where(shop_card_id: @shop_card.id).present? %>
            <p>Déjà dans le panier</p>
          <% else %>
            <%= link_to "Ajouter au panier", selected_cards_path(shop_card_id: @shop_card.id, user_id: current_user.id), method: 'post',
            class: "btn btn-classic btn-lg border-yellow" %>
          <% end %>
          <%= link_to "Voir les autres cartes de #{@shop_card.user.first_name}", user_path(@shop_card.user),
          class: "btn btn-classic btn-lg border-yellow" %>
        <% end %>
      </div>

    </div>
  </div>
</div>
