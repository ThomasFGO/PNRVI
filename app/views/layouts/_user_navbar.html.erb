<% if user_signed_in? %>
  <nav class="user-navbar">

    <div class="computer-item"><%= link_to "Mon magasin", shop_cards_path, class: "navbar-item" %></div>
    <div class="phone-item">
      <%= link_to shop_cards_path do %>
        <%= image_tag("icone_magasin.png", class: "icone") %>
      <% end %>
    </div>
    <div class="computer-item"><%= link_to "Mes recherches", search_cards_path, class: "navbar-item"%></div>
    <div class="phone-item">
      <%= link_to search_cards_path do %>
        <%= image_tag("icone_recherches.png", class: "icone") %>
      <% end %>
    </div>
    <div class="computer-item"><%= link_to "Mon panier", selected_cards_path, class: "navbar-item"%></div>
    <div class="phone-item">
      <%= link_to selected_cards_path do %>
        <%= image_tag("icone_panier.png", class: "icone") %>
      <% end %>
    </div>

    <div class="computer-item">
      <% if @unread_count > 0 %>
        <%= link_to "Mes messages (+#{@unread_count})", conversations_path, class: "navbar-item"%>
      <% else %>
        <%= link_to "Mes messages", conversations_path, class: "navbar-item"%>
      <% end %>
    </div>

    <div class="phone-item">
      <%= link_to conversations_path do %>
        <%= image_tag("icone_messages.png", class: "icone") %>
      <% end %>
      <% if @unread_count > 0 %>
        <%= "(+#{@unread_count})" %>
      <% end %>
    </div>
  </nav>
<% end %>
