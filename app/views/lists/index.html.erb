<div class="container">

  <% if user_signed_in? %>
  <% else %>
    <%= render partial: "lists/home" %>
  <% end %>

  <div class="lists-container">
    <div class="title"><h4>Les s√©ries :</h4></div>
    <div class="blocs-container">
      <% @blocs.each do |bloc| %>
        <div class="bloc-container">
          <div class="bloc-header"><%= bloc.fr_name %></div>

          <div class="bloc-lists">
            <% bloc.lists.order("id ASC").each do |list| %>
              <div class="list-card">
                <%= link_to list_path(list) do %>
                  <% if list.fr_logo_url.present? %><%= image_tag(list.fr_logo_url, class: "logo-list-mini")%> <% end %>
                  <% if list.symbol_url.present? %><%= image_tag(list.symbol_url, class: "symbol-list")%> <% end %>
                <% end  %>
              </div>
            <% end %>
          </div>

        </div>
      <% end %>
    </div>
  </div>

</div>
