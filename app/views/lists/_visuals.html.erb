<%#= text_field_tag('card_research', nil, placeholder: 'Nom ou NÂ°') %>

<div class="visuals-container">

    <% @ref_cards.order("id asc").each do |ref_card| %>
        <div class="card-element", id="<%= ref_card.id %>" >
          <% if ref_card.fr_url.present? %>
            <%= image_tag(ref_card.fr_url, class: "mini", card_name:ref_card.fr_name, nb:ref_card.number) %>
          <% elsif ref_card.fr_r_url.present? %>
            <%= image_tag(ref_card.fr_r_url, class: "mini", card_name:ref_card.fr_name, nb:ref_card.number) %>
          <% else %>
            <%= image_tag(ref_card.us_url, class: "mini",card_name:ref_card.us_name, nb:ref_card.number) %>
          <% end %>
        </div>

    <% end  %>

</div>
