<div class="visuals-container">

    <% @list.ref_cards.order("id asc").each do |ref_card| %>

        <div class="card-element", id="<%= ref_card.id %>">
          <%= link_to ref_card_path(ref_card) do %>
            <% if ref_card.fr_url.present? %>
              <%= image_tag(ref_card.fr_url, class: "mini") %>
            <% elsif ref_card.fr_r_url.present? %>
              <%= image_tag(ref_card.fr_r_url, class: "mini") %>
            <% else %>
              <%= image_tag(ref_card.us_url, class: "mini") %>
            <% end %>
          <% end  %>
          <div class="buttons">
            <div class="big_button">
              <%= link_to "Vendre", new_ref_card_shop_card_path(ref_card), class: "btn btn-sm"%>
            </div>
            <div class="big_button">
              <%= link_to "Rechercher", new_ref_card_search_card_path(ref_card), class: "btn btn-sm"%>
            </div>
          </div>
        </div>

    <% end  %>

</div>
