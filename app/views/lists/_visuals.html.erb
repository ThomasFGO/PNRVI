<%#= text_field_tag('card_research', nil, placeholder: 'Nom ou NÂ°') %>
<div class="visuals-container">
  <% @ref_cards.order("id asc").each do |ref_card| %>
    <div class="card-element", id="<%= ref_card.id %>" >
      <% if @list.jap? %>
        <%= cl_image_tag ("jap_lists/visuals/#{@list.bloc.cl_name}/#{@list.code}/#{ref_card.rank}"), class: "mini" %>
      <% else %>
        <%= link_to ref_card_path(ref_card) do %>
          <%= cl_image_tag ("lists/visuals/#{@list.bloc.cl_name}/#{@list.code}/#{ref_card.rank}"), class: "mini" %>
        <% end %>
      <% end %>
    </div>
  <% end  %>
</div>
