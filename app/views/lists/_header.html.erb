<div class="list-header">
  <div class="list_header-visuals">
    <% unless @list.jap? %>
      <div class="logo">
        <%= cl_image_tag ("lists/fr_logos/poknroll_#{@list.code}_fr_logo.png"),
        class: "logo-list-standard" %>
      </div>
      <div class="symbol">
        <%= cl_image_tag ("lists/symbols/poknroll_#{@list.code}_symbol.png"), class: "symbol-list" %>
      </div>
    <% else %>
      <div class="symbol">
        <%= image_tag @list.symbol_url, class: "symbol-list" %>
      </div>
    <% end %>
  </div>
  <div class="list_header-infos">
    <div class="name">
      <h4><%= @list.name %></h4>
    </div>
    <div class="size_and_secrets">
      <h6>
        <% if @list.secrets_count > 1 %>
          <%= @list.size %> cartes et <%=  @list.secrets_count %> secrètes
        <% elsif @list.secrets_count == 1 %>
          <%= @list.size %> cartes et 1 secrète
        <% else %>
          <%= @list.size %> cartes et aucune secrète
        <% end %>
      </h6>
    </div>
  </div>
</div>


