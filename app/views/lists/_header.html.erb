<div class="list-header">
  <div class="list_header-visuals">
    <% if @list.occi? %>
      <div class="logo">
        <%= cl_image_tag ("lists/fr_logos/#{@code_list}"),
        class: "logo-list-standard" %>
      </div>
      <div class="symbol">
        <%= cl_image_tag ("lists/symbols/#{@code_list}"), class: "symbol-list-mini" %>
      </div>
    <% else %>
      <div class="logo">
        <%= cl_image_tag ("jap_lists/logos/#{@code_list}"),
        class: "logo-list-standard" %>
      </div>
      <% unless @no_symbol_jap_lists.include?(@code_list) %>
        <div class="symbol">
          <%= cl_image_tag ("jap_lists/symbols/#{@code_list}"), class: "symbol-list-mini" %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="list_header-infos">
    <div class="name">
      <h4><%= @list.name %></h4>
    </div>
    <div class="size_and_secrets">
      <h6>
        <% if @list.secrets_count > 1 %>
          <%= @list.size %> cartes et <%=  @list.secrets_count %> secrètes
        <% elsif @list.secrets_count == 1 %>
          <%= @list.size %> cartes et 1 secrète
        <% else %>
          <%= @list.size %> cartes et aucune secrète
        <% end %>
      </h6>
    </div>
  </div>
</div>


