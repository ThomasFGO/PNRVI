<div class="list-header">
  <div class="list_header-box">
    <div class="first_part">
      <div class="logo">
        <%= image_tag(@list.fr_logo_url, class: "logo-list-standard") %>
      </div>
      <div class="name_and_symbol">
        <div class="name">
          <h4><%= @list.fr_name %></h4>
        </div>
        <div class="symbol">
          <%= image_tag(@list.symbol_url, class: "symbol-list")%>
        </div>
      </div>
    </div>
    <div class="second_part">
      <div class="size_and_secrets">
        <div class="intro">
          <p>Cette série contient : </p>
        </div>
        <div class="numbers">
          <% if @list.ref_cards.where(rarety_type: "Secret").count > 1 %>
            <p> <%= @list.size %> cartes et <%=  @list.ref_cards.where(rarety_type: "Secret").count %> secrêtes</p>
          <% else %>
            <p> <%= @list.size %> cartes et aucune secrête</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
