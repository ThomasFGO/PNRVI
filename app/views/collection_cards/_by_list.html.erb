<div class="collection_cards_by_list-container">

    <% @lists.each do |list| %>
      <div class="dropdown">
        <% if list.collection_cards.where(user_id: current_user.id).count > 0 %>
          <button class="btn btn-secondary dropdown-toggle list-header_mini" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= list.fr_name %>
            <%= image_tag(list.symbol_url, height: '20')%>
            <%= list.collection_cards.count %>
          </button>

          <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
            <% list.collection_cards.where(user_id: current_user.id).order("ref_card_id asc").each do |collection_card| %>
              <button class="dropdown-item" type="button">
                <table>
                  <tr>
                    <td>
                      <%= link_to collection_card_path(collection_card) do %>
                        <% if collection_card.ref_card.fr_url.present? %>
                          <%= image_tag(collection_card.ref_card.fr_url, class: "pokemon-card-micro") %>
                        <% elsif collection_card.ref_card.fr_r_url.present? %>
                          <%= image_tag(collection_card.ref_card.fr_r_url, class: "pokemon-card-micro") %>
                        <% else %>
                          <%= image_tag(collection_card.ref_card.us_url, class: "pokemon-card-micro") %>
                        <% end %>
                      <% end  %>
                    </td>
                    <td>
                      <% if collection_card.ref_card.fr_name.present? %>
                        <%= collection_card.ref_card.fr_name %>
                      <% else %>
                        <%= collection_card.ref_card.us_name %>
                      <% end %>
                    </td>
                    <td><%= collection_card.ref_card.number %>/<%= collection_card.ref_card.list.size %></td>
                    <td><%= collection_card.ref_card.rarety_type %></td>
                    <td><%= collection_card.language %></td>
                    <td>
                      <% if collection_card.reved? %>
                        <%= "R / Ã‰d1" %>
                      <% else %>
                        <%= "N" %>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to "Retirer", collection_card_path(collection_card),
                        :class => "btn btn-danger btn-sm",
                        method: :delete %>
                    </td>
                  </tr>
                </table>
              </button>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
