<div class="container">
  <h4><%= @ref_card.fr_name %> ( <%= @ref_card.list.fr_name %> )</h4>
  <% if @ref_card.fr_url.present? %>
    <%= image_tag(@ref_card.fr_url, width: '130', class: "pokemon-card-mini") %>
  <% elsif @ref_card.fr_r_url.present? %>
    <%= image_tag(@ref_card.fr_r_url, width: '130', class: "pokemon-card-mini") %>
  <% else %>
    <%= image_tag(@ref_card.us_url, width: '130', class: "pokemon-card-mini") %>
  <% end %>

  <%= simple_form_for [@ref_card, @collection_card] do |f| %>
    <%= f.input :reved, label: "Reverse / Édition 1" %>
    <%= f.input :condition, label: "État" %>
    <%= f.input :language, label: "Langue" %>
    <%= f.input :ph_one, label: "Recto" %>
    <%= f.input :ph_one_cache, as: :hidden %>
    <%= f.input :ph_two, label: "Verso" %>
    <%= f.input :ph_two_cache, as: :hidden %>

    <%= f.submit "Ajouter à ma collection", class: "btn btn-primary" %>
  <% end %>
</div>
