<div class="other_user_selected_cards">
<p>Les cartes qu'il ou elle veut</p>
<% if @conversation.recipient_id == current_user.id %>
  <% @conversation.sender.selected_cards.each do |selected_card| %>
    <% if selected_card.shop_card.user_id == current_user.id %>
      <%=  selected_card.shop_card.ref_card.fr_name%>
    <% end %>
  <% end %>
<% else %>
  <% @conversation.recipient.selected_cards.each do |selected_card| %>
    <% if selected_card.shop_card.user_id == current_user.id %>
      <%=  selected_card.shop_card.ref_card.fr_name%>
    <% end %>
  <% end %>
<% end %>
</div>

<div class="current_user_selected_cards">
<p>Les cartes que je veux</p>
<% if @conversation.recipient_id == current_user.id %>
  <% current_user.selected_cards.each do |selected_card| %>
    <% if selected_card.shop_card.user_id == @conversation.sender_id %>
      <%=  selected_card.shop_card.ref_card.fr_name%>
    <% end %>
  <% end %>
<% else %>
  <% current_user.selected_cards.each do |selected_card| %>
    <% if selected_card.shop_card.user_id == @conversation.recipient_id %>
      <%=  selected_card.shop_card.ref_card.fr_name%>
    <% end %>
  <% end %>
<% end %>
</div>



