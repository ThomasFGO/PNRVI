<div class="his_list-container">
  <div>
    <%= @his_selected_cards.count %>
    <%= @his_selected_cards.joins(:shop_card).sum(:price) %>
  </div>
  <div class="visuals-container">

      <% @his_selected_cards.each do |selected_card| %>

          <div class="card-element shop-element">
            <%= link_to shop_card_path(selected_card.shop_card) do %>
              <% if selected_card.shop_card.ph_one.present? %>
                <div class="visual">
                  <%= cl_image_tag selected_card.shop_card.ph_one, :gravity=>"auto", :crop=>"fill",
                  :transformation=>[
                  {:width=>500, :crop=>"scale"},
                  {:overlay=>{:font_family=>"Arial", :font_size=>50,
                  :text=>"#{selected_card.shop_card.user.first_name} #{selected_card.shop_card.user.last_name}"},
                  :gravity=>"south", :y=>100}
                  ], class: "mini"%>
                </div>
              <% end %>
            <% end %>
            <div class="price">
              <%= selected_card.shop_card.price %> â‚¬
            </div>
          </div>
    <% end %>
  </div>
</div>

