<%= form_for [@conversation, @message] do |f| %>
  <div class="new_message-body">
    <%= f.text_area :body, placeholder: "Votre message ..." %>
    <%= f.text_field :user_id, value: current_user.id, type: "hidden"  %>
  </div>
  <div class="button">
    <%= f.submit "Envoyer", class:'btn btn-success' %>
  </div>
<% end %>
