<div class="container">
  <div class="selected_cards-container">
    <%= render partial: "messages/selected_cards" %>
  </div>
  <div class="messages-header">
    <h4>Conversation avec
      <% if @conversation.recipient_id == current_user.id%>
        <%= @conversation.sender.first_name %>
      <% else %>
        <%= @conversation.recipient.first_name %>
      <% end %>
    </h4>
    <% if @over_ten %>
      <%= link_to "Show previous", '?m=all', class:'button is-link' %>
    <% end %>
  </div>

  <div class="messages-container">
    <% @messages.each do |message| %>
      <% if message.body %>
        <% if message.user_id == current_user.id %>
          <div class="current_user_message-content">
            <div class="message-header">
              <% user = User.find(message.user_id) %>
              Moi / <%= message.message_time %>
            </div>
            <div class="message-body">
              <%= message.body %>
            </div>
          </div>
        <% else %>
          <div class="other_user_message-content">
            <div class="message-header">
              <% user = User.find(message.user_id) %>
              <%= user.first_name %> / <%= message.message_time %>
            </div>
            <div class="message-body">
              <%= message.body %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>

    <div class="new_message-content">
      <%= render partial: "messages/form" %>
    </div>
  </div>
</div>
