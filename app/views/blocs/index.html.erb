<div class="container">
  <div class="lists-container">
    <div class="blocs-container">
      <% @occi_blocs.each do |bloc| %>
        <div class="bloc-container">
          <div class="bloc-header"><%= bloc.fr_name %></div>
          <div class="bloc-lists">
            <% bloc.lists.order('id ASC').each do |list| %>
              <div class="list-card">
                <%= link_to list_path(list) do %>
                  <%= cl_image_tag ("lists/fr_logos/#{list.code}"), class: "logo-list-mini" %>
                  <%= cl_image_tag ("lists/symbols/#{list.code}"),class: "symbol-list-mini" %>
                <% end  %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
